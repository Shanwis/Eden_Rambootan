{
  "manifest_version": 3,
  "name": "AI Company Reputation Analyzer",
  "version": "1.0.0",
  "description": "AI-powered company reputation analysis tool with stunning UI",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Company Reputation Analyzer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
} 